@using DataAccess.Models
@{
    ViewData["Title"] = "Index";
}

<h1>Order Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Required Date
            </th>
            <th>
                Shipped Date
            </th>
            <th>
                Freight
            </th>
            <th>
                Member ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order order in Model)
        {
            <tr>
                <td>
                    @order.OrderDate
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.RequiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Freight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Member.MemberId)
                </td>
                <td>
                    <a asp-controller="OrderDetails" asp-action="Index" asp-route-id="@order.OrderId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
